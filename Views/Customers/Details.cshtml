@model LibApp.Models.Customer

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>@Model.MembershipType.Name</li>
    @if (Model.Birthdate.HasValue)
    {
        <li>@Model.Birthdate.Value.ToShortDateString()</li>
    }
</ul>

@* Dodaj przycisk "Edit" *@
<p>
    <a href="@Url.Action("Edit", "Customers", new { id = Model.Id })" class="btn btn-primary">Edit</a>
</p>